		   <property name="JDBC.Username" value="${username}"/>
		   <property name="JDBC.Password" value="${password}"/>
		 </dataSource>
	</transactionManager>
	-->
	
	<sqlMap resource="cl/wamtech/remarcador/dao/ibatis/postgres/BigInt.xml"/>
	<sqlMap resource="cl/wamtech/remarcador/dao/ibatis/postgres/Perfil.xml"/>
	<sqlMap resource="cl/wamtech/remarcador/dao/ibatis/postgres/Remarcador.xml"/>
	<sqlMap resource="cl/wamtech/remarcador/dao/ibatis/postgres/Usuario.xml"/>
