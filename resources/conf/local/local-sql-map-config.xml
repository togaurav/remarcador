	<sqlMap resource="cl/wamtech/remarcador/dao/ibatis/postgres/Bitacora.xml"/>
	<sqlMap resource="cl/wamtech/remarcador/dao/ibatis/postgres/OtrosQuerys.xml"/>
</sqlMapConfig>