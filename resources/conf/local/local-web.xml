	<display-name>REMARCADOR - PROJECT</display-name>
	<description>REMARCADOR - PROJECT</description>      
         
	<servlet>
		<servlet-name>remarcador</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
