	<servlet-mapping>
		<servlet-name>remarcador</servlet-name>
	    <url-pattern>*.htm</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>remarcador</servlet-name>
	    <url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
    	<welcome-file>index.jsp</welcome-file>
  	</welcome-file-list>

	<resource-ref>
		<description>PostgreSQL datasource WamManagerDS</description>
	 	<res-ref-name>jdbc/WamManagerDS</res-ref-name>
	 	<res-type>javax.sql.DataSource</res-type>
	 	<res-auth>Container</res-auth>
	</resource-ref>

	<resource-ref>
		<description>PostgreSQL datasource CencosudPulsosDS</description>
	 	<res-ref-name>jdbc/CencosudPulsosDS</res-ref-name>
	 	<res-type>javax.sql.DataSource</res-type>
	 	<res-auth>Container</res-auth>
	</resource-ref>
