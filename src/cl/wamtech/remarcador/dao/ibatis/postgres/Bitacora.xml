			</isNotEqual>
		
			<isNotEmpty property="fechaFinal.id" prepend=",">
				fecha_int = #fechaFinal.id#
			</isNotEmpty>
		
		
		</dynamic>
		
		WHERE id = #id#
	</update>
   
